/* template/productList.wxss */
.productItem{
  width:50%;
  height:auto;
  background:#f6f6f6;
  box-sizing: border-box;
  padding:10rpx 10rpx 0rpx 10rpx;
}
.productImg{
  width:100%;
  height:350rpx;
  vertical-align:middle;
}
.info{
  display: flex;
  justify-content: space-between;
}
.name_price{
  font-size:28rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap; 
  width:100%;
}
.name_price text:nth-last-child(1){
  color:#FFA500;
  font-size:25rpx
}
.buyBtn{
  font-size:28rpx;
  color:#fff;
  background:#FFA500;
  padding:10rpx 20rpx;
}
.operate{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-top:5rpx;
  align-items: center;
}
.collect{
  width:48rpx;
  height:48rpx;
}
.collect image{
  width:100%;
  height:100%;
}