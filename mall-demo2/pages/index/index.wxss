/**index.wxss**/
@import "../../template/productList.wxss";
swiper{
   width:100%;
  height:400rpx;
}
.swiperImg{
  width:100%;
  height:400rpx;
}
.search{
  width:100%;
  /* padding:20rpx 0rpx; */
  background:darkgrey;
  display: flex;
  justify-content: center;
  align-items: center;
 height:90rpx;
  position: relative;
}
.search::after{
  content:"";
  display: block;
  width:100%;
  height:100%;
  background:#fff;
  opacity: 0.5;
  position: absolute;  
  top:0px;
  left:0px;
}
.searchBox{
    position: absolute;
    z-index:2;
    display: flex;
    background:#fff;
    border-radius: 5rpx;
    width:90%;
    height:50rpx;
    align-items: center;
}
.searchBox icon{
   margin-left:20rpx;
}
.searchBox text{
  font-size:24rpx;
  line-height:50rpx;
  color:#666;
  margin-left:15rpx;
}
/*商城活动中心*/
.activity{
  display: flex;
  width:100%;
  height:auto;
  flex-direction: column;
  margin-top:7rpx;
}
.bigPost{
  width:100%;
  height:300rpx;
}
.bigPost image{
  width:100%;
  height:100%;
}
.twoPost{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top:5rpx;
}
.twoPost image{
  width:49.6%;
  height:300rpx;
}

/*商品详情*/
.sectionTitle{
  font-size:30rpx;
  color:#FFA500;
  text-align: center;
  line-height:2.4em;
  font-weight: 600;
}
.products{
  margin-top:10rpx;
  display: flex;
  flex-direction: row;
  align-items: top;
  flex-wrap: wrap;
}
 