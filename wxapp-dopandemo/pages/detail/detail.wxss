/* pages/detail/detail.wxss */
.head{
  width:100%;
  height:300rpx;
  padding:15rpx 20rpx;
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  box-sizing: border-box;
  align-items:flex-start;
  background: rgba(0,0,0,.1);
}
 
.movie-img{
  width:30%;
  height:100%;  
} 
.info{ 
  width:68%;
  height:100%;
}
.movie-name{
  font-size:30rpx;
  padding-bottom: 20rpx;

}
.movie-year{
  font-size:25rpx;
}
.movie-adress{
  font-size:25rpx;
}
.movie-tag,.movie-director{
  font-size:25rpx;
}
.oparate{
  margin-top:20rpx;
  display: flex;
  flex-direction: row;

}
.collect{
   font-size:28rpx;
   background:rgba(0,0,0,.4);
   color:#fff;
   padding:7rpx 30rpx;
   margin:0rpx 10rpx;
   border-radius: 10rpx;
}
.share{
  font-size:28rpx;
  background:rgba(0,0,0,.4);
  color:#fff;
  padding:7rpx 30rpx;
  margin:0rpx 10rpx;
  border-radius: 10rpx;
}

.summary{
  padding:20rpx 15rpx 10rpx 15rpx;
  font-size:28rpx;
}
.partTitle{
  display: block;
  color:#666;
}
.content{
  text-indent: 2em;
  color:#666;
}
.casts{
  padding:20rpx 15rpx 10rpx 15rpx;
}
.castsContent{
  display: flex;
  justify-content:space-around;
  flex-wrap: wrap;
  align-items: center;
  padding-top:20rpx;
}
.casts-item{
  width:23%;
  height:300rpx;
}
.casts-item image{
  width:100%;
  height:200rpx;
}
.cast-name{
  font-size:28rpx;
  color:#666;
}