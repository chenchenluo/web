/* pages/catagory/catagory.wxss */
.content{
  padding:10rpx 0rpx; 
}
.topBanner{
  display: flex;
  top:0;
  left:0;
  width:100%;
  height:60rpx;
  justify-content: space-around;
  align-items: center;
  border-bottom:1px solid #ddd;
}
.bannerItem{
   font-size:28rpx;
}
.searchBox{
  width:60rpx;
  height:60rpx;
}
.searchBox image{
  width:100%;
  height:100%;
}
.allBox{
  padding:10rpx 25rpx;
  background:#f5f5f5;
  position: fixed;

}
.boxItem{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items:top;
  font-size:28rpx;
}
.itemBox{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items:center;
  font-size:26rpx;
  flex-wrap: wrap;
 
}
.itemBox view{
  padding:5px 10px;
}
.boxtitle{
  width:40px;
  padding:5px 0px;
}